<h1><%= current_user.name %></h1>
<a href="/users/<%= current_user.id %>/edit">Edit Profile</a>

<form action="/secrets/new" method="POST">
    <input type="hidden" name="authenticity_token" value="form_authenticity_token">
    <h3>New Secret</h3>
    <textarea name="user[content]" id="content" cols="30" rows="10" placeholder="Add your secret here..."></textarea>
    <input type="submit" value="Create Secret">
</form>

<% if @my_secrets %>
    <% @my_secrets.each do |secret| %>
        <p><%= secret.content %></p>
        <form action="/secrets/<%= secret.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="hidden" name="authenticity_token" value="form_authenticity_token">
            <input type="submit" value="Delete Secret">
        </form>
    <% end %>
<% end %>


    